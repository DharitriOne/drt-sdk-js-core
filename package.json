{
  "name": "@dharitri-sdk/core",
  "version": "0.0.1",
  "description": "Dharitri SDK for JavaScript and TypeScript",
  "author": "Dharitri",
  "homepage": "https://dharitri.com",
  "license": "MIT",
  "repository": "github:DharitriOne/drt-sdk-js-core",
  "bugs": {
    "url": "https://github.com/DharitriOne/drt-sdk-js-core/issues"
  },
  "keywords": [
    "dharitri-sdk",
    "sdk",
    "blockchain"
  ],
  "main": "out/index.js",
  "types": "out/index.d.js",
  "files": [
    "out/**/*",
    "out-browser/**/*"
  ],
  "scripts": {
    "test": "npm run tests-unit",
    "tests-unit": "mocha $(find . -name '*.spec.ts' ! -name '*.local.net.spec.*' ! -name '*.devnet.spec.*' ! -name '*.testnet.spec.*')",
    "tests-localnet": "mocha $(find . -name '*.local.net.spec.ts')",
    "tests-devnet": "mocha $(find . -name '*.devnet.spec.ts')",
    "tests-testnet": "mocha $(find . -name '*.testnet.spec.ts')",
    "compile-browser": "tsc -p tsconfig.json && browserify out/index.js -o out-browser/sdk-core.js --standalone dharitriSdkCore -p esmify",
    "compile": "tsc -p tsconfig.json",
    "compile-proto": "npx pbjs -t static-module -w default -o src/proto/compiled.js src/proto/transaction.proto",
    "browser-tests": "make clean && make browser-tests && http-server --port=9876 -o browser-tests/index.html",
    "lint": "eslint .",
    "pretty": "prettier --write ./src/**/*.{js,ts}",
    "pretest": "npm run compile",
    "prepare": "npm run compile"
  },
  "dependencies": {
    "@dharitri-sdk/transaction-decoder": "0.0.1",
    "json-bigint": "1.0.0",
    "bech32": "1.1.4",
    "blake2b": "2.1.3",
    "buffer": "6.0.3",
    "keccak": "3.0.2"
  },
  "devDependencies": {
    "@dharitri-sdk/network-providers": "0.0.1",
    "@dharitri-sdk/wallet": "0.0.1",
    "@types/assert": "1.4.6",
    "@types/chai": "4.2.11",
    "@types/mocha": "9.1.0",
    "@types/node": "13.13.2",
    "assert": "2.0.0",
    "axios": "^1.7.4",
    "browserify": "17.0.0",
    "chai": "4.2.0",
    "mocha": "9.2.2",
    "protobufjs-cli": "1.1.2",
    "ts-node": "9.1.1",
    "typescript": "4.1.2",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.2.4"
  },
  "peerDependencies": {
    "bignumber.js": "^9.0.1",
    "protobufjs": "^7.2.6"
  }
}
